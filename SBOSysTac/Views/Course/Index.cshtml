@model IEnumerable<SBOSysTac.Models.CourseCategory>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">

        <div class="box-header with-border">
            <h3 class="box-title">Course Category DataTable</h3>
            @*<div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>*@
        </div>

        <div class="box-body">

            <table id="table_course" class="table table-condensed table-hover" style="width: 100%;">
                <thead>

                <tr>
                    <th></th>
                    <th class="text-center">No.</th>
                    <th class="text-left">Course Name</th>
                    <th class="text-left">Notes</th>
                    <th class="text-center">Main Course</th>
                </tr>
                </thead>
                <tbody>

                @foreach (var item in Model)
                {

                    <tr>
                        <td></td>
                        <td class="text-center">@item.CourserId</td>
                        <td class="text-left">@item.Course</td>
                        <td class="text-left">@item.Note</td>
                        <td class="text-center">@((bool) item.Main_Bol ? "Yes" : "No")</td>
                    </tr>
                }


                </tbody>
            </table>
        </div>

        <div class="box-footer">
            @*Footer*@
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

@section scripts{
    
    <script type="text/javascript">

        var courseUrl = {
            urlAdd: "@Url.Action("CreateCourse","Course")",
            urlRemove: "@Url.Action("RemoveCourse","Course")",
            urlUpdateCourse: "@Url.Action("ModifyCourse", "Course",new { courseId = "cId"})"
        }
    </script>

    @Scripts.Render("~/Scripts/js_course.js")

}
