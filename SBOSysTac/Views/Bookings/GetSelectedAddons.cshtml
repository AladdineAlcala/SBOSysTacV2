@using SBOSysTac.ViewModel
@model SelectedAddonsViewModel
    
<div class="row">
    <h1 class="text-center">Addons and Upgrades</h1>
</div>

@using (Html.BeginForm("SaveSelectedAddon", "Bookings",FormMethod.Post, new { @class = "form-horizontal", @id = "selectedaddonform", role = "form" }))
{
    <div class="box-body">
    
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.HiddenFor(m => m.bookingNo)
        @Html.HiddenFor(m=>m.addonId)
        
        <div class="row">
            <div class="col-sm-10">
                <div class="form-group">
                    <label class="control-label col-sm-3">Addon Details</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m =>m.addondetails, new { @class = "form-control", @readonly= "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Unit:</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m =>m.unit, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Amount per Unit</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m =>m.amount, new { @class = "form-control text-right", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Order Qty:</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m =>m.orderQty, new { @class = "form-control text-right", @id = "addonselorderqty"})
                        @Html.ValidationMessageFor(m => m.orderQty, null, new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="box-footer" style="padding-left: 0px;">
        <div class="col-md-5 col-sm-offset-4">


            <button class="btn bg-olive btn-flat" type="submit" id="btn_regselctedaddons"><i class="fa fa-check-square-o"></i> Register</button>
            <button class="btn bg-purple btn-flat" type="button" id="btn_cancelselectedaddon">Cancel</button>

        </div>
    </div>

}
