@using SBOSysTac.ViewModel
@model PackageBookingViewModel
    

    <div class="box box-primary">
        <div class="box-header">
            <i class="ion ion-clipboard"></i>
            <h3 class="box-title">Booking Menus:</h3>
            <div class="box-tools pull-right">
                <button id="add_maincourse" class="btn btn-sm btn-default" data-id="@Model.transactionId"><i class="fa fa-search"></i></button>
            </div>

        </div>
        <!--box-header-->
        <div class="box-body">
            <ul class="products-list product-list-in-box">
                @{
                    int counter = 0;
                }
            @foreach (var menu in Model.BookMenuses)
            {

                counter += 1;

                <li class="item">
                    <div class="product product-img" data-id="@counter">


                        @if (string.IsNullOrEmpty(menu.menuImageFilename))
                        {
                            @:<img src="@Url.Content("~/Content/dist/img/default-50x50.gif")" alt="@menu.coursename" class="imglightbox">
                        }
                        else
                        {
                            @:<img src="@Url.Content(String.Format("~/Content/UploadedImages/{0}", menu.menuImageFilename))" alt="@menu.coursename" class="imglightbox">
                        }



                    </div>
                    <div class="product product-info">
                        <span class="product-title">
                            @menu.menu_name
                        </span>
                        <span class="product-description">
                            @menu.coursename
                        </span>
                      
                    </div>
                    <div class="tools" data-id="@Model.transactionId">
                        <i class="fa fa-edit" id="menu_change" data-menuid="@menu.menu_No"></i>
                        <i class="fa fa-trash-o" id="menu_remove" data-menuid="@menu.menu_No"></i>
                    </div>
                </li>

            }

            </ul> 
           
        </div>
        <!--box-body-->
    </div>

<script type="text/javascript">

   
    $tblBookMenu = @Html.Raw(Json.Encode(@Model.BookMenuses));

    

</script>



