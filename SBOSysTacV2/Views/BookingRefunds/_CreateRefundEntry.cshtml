@using SBOSysTacV2.ViewModel
@model BookingRefundViewModel
    

<div class="box box-primary">
    
    <div class="box-body">
        @using (Html.BeginForm("BookingRefundEntry","BookingRefunds",FormMethod.Post,new {@class="form-horizontal",id="refundBooking"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            @Html.HiddenFor(m=>m.transId)

            <div class="row" style="margin-top: 10px;">
                <div class="col-sm-6 col-sm-offset-6">
                    <div class="form-group">
                        <label class="col-xs-4 control-label text-right">Date Entry</label>
                        <div class="col-xs-8">
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>

                                @*<input type="text"class="form-control pull-right" id="refunddatepicker"/>*@
                                @Html.TextBoxFor(m=>m.rfDate,new {@class= "form-control pull-right", id= "refunddatepicker"})
                            </div>
                        </div>
                    </div>
                </div>
        
      

        
            </div>
   
    
            <div class="row" style="margin-top: 25px;">
                <div class="col-sm-10">
                    <div class="form-group">
                        <label class="col-xs-3 control-label">Refundable Amount:</label>
                        <div class="col-xs-6">
                            @*<input type="text" value="0.00" class="form-control text-right" readonly="readonly" />*@
                            @Html.TextBoxFor(m=>m.refundAmount, new {@class="form-control text-right",@readonly="readonly",value=string.Format("{0:N}",Model.refundAmount) })
                        </div>
                    </div>
            
                    <div class="form-group">
                        <label class="col-xs-3 control-label">Cancellation Fee (10%):</label>
                        <div class="col-xs-6">
                            @*<input type="text" value="0.00" class="form-control text-right" readonly="readonly"/>*@
                            @Html.TextBoxFor(m=>m.refundDeduction,new {@class= "form-control text-right", @readonly="readonly",value = string.Format("{0:N}", Model.refundDeduction) })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-xs-3 control-label">Amount Due:</label>
                        <div class="col-xs-6">
                            @*<input type="text" value="0.00" class="form-control text-right" readonly="readonly"/>*@
                            @Html.TextBoxFor(m=>m.refundNet, new {@class= "form-control text-right", @readonly="readonly",value = string.Format("{0:N}", Model.refundNet) })

                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-xs-5 control-label required" style="margin-left:17px;">State Reason for this refund:</label>
                        <div class="col-sm-10 col-sm-offset-2">
                            @*<textarea class="form-control" rows="3"></textarea>*@
                            @Html.TextAreaFor(m=>m.refundReason,new {@class="form-control",@rows="3"})
                            @Html.ValidationMessageFor(m=>m.refundReason, null, new {@class = "text-danger"})
                        </div>                      
                    </div>
                </div>
            </div>
            
            <div class="row">

                <!-- /.col -->
                <div class="col-sm-3 col-sm-offset-4">
                    <button type="button" class="btn btn-primary btn-block btn-flat" id="save_refund">Create Refund</button>
                </div>
                <!-- /.col -->
            </div>


        }
    </div>

</div>

