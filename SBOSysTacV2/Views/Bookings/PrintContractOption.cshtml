@using SBOSysTacV2.ViewModel
@model PrintOptionViewModel

<link href="~/Content/plugins/iCheck/all.css" rel="stylesheet" />

<input type="hidden" value="@Model.Id" id="hiddenid"/>


<section class="content">

    <div class="pad margin no-print" style="padding-left: 0px !important; padding-right: 0px !important; margin-bottom: 0px; padding-bottom: 0px;">
        <div class="callout callout-info" style="margin-bottom: 15px;">
            <h4><i class="fa fa-info" style="padding: 0px; margin: 0px;"></i> Print Contract Options </h4>

        </div>
    </div>


    <div class="row">
        <div class="register-box" style="margin-top: 10px;">

            <p class="lead text-center">Select Print Options</p>

            <div class="box box-success">

                <div class="box-body" style="height: 100px;">


                    <div class="form-group">
                        <div class="col-sm-10">
                            <div class="radio">

                                <label>
                                   
                                    @Html.RadioButton("printopt", "contform" ,new {id="printcon", @checked = true })
                                    Contract Form
                                </label>
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-sm-10">
                            <div class="radio">

                                <label>
                                  
                                    @Html.RadioButton("printopt", "confunction")
                                    Contract for Function
                                </label>


                            </div>
                        </div>

                    </div>

                </div>
                
                <div class="box-footer" style="padding-left: 0px;">
                    <div class="col-sm-6 col-sm-offset-4">
                        <a class="btn bg-olive btn-flat printopt" href="@Url.Action("PrintContract","Bookings")">Print</a> @*target="_blank"*@
                        <button class="btn bg-purple btn-flat"type="button" id="cancel" onclick="window.history.back()">Cancel</button>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>

@section scripts
{
    <script type="text/javascript">

        $(document).ready(function() {


            var transid = $('#hiddenid').val();

            $('a.printopt').on('click',function(e) {

                e.preventDefault();
                e.stopPropagation();
               
                   
                    var selopt = $('input[type="radio"][name="printopt"]:checked').val();

                    var url = $(this).attr('href');

                   window.location.href = url + '?transId=' + transid + '&selprintopt=' + selopt;

                //window.open(url + '?transId=' + transid + '&selprintopt=' + selopt);

                // window.location.href = url;
            });

        });

    </script>




}