
<style type="text/css">

    #tbl_eventsBooking tbody tr td:last-child .get-details {
        opacity: 0;
    }
    #tbl_eventsBooking tbody tr:hover td:last-child .get-details {
        opacity: 1;
    }
    #tbl_eventsBooking tbody tr.selected td:last-child .get-details {
        opacity: 1;
    }
    #tbl_eventsBooking tbody tr.selected td:last-child .round-button {
        background-color: #008d4c;
    }
    .round-button {
        min-width: 40px;
        height: 40px;
        border-style: none;
        color: white;
        background-color: #3498db;
        border-radius: 50%;
        text-align: center;
        padding: 0;
        line-height: 20px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.25);
    }

    .btnAddBookings {
        min-width: 50px;
        height: 50px;
        border-style: none;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #3498db;
        outline: #2e6cd1;
        cursor: pointer;
        color: #ffffff;
        font-size: 25px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.25);
        transition: background 0.25s;
    }

    .btnAddBookings:active, .btnAddBookings:hover {
        background-color: #2e6cd1;
    }
</style>



<section class="content" id="bookingsection">
    <div class="row">
        <div class="col-xs-12">
            
            <div class="box">
                <div class="box-header with-border">
                    <i class="fa fa-cart-plus fa-fw"></i>
                    <h3 class="box-title">Bookings List of Schedule</h3>
                </div>

                <div class="box-body">

                    <table class="table table-condensed table-hover" id="tbl_eventsBooking" style="width: 100%;">
                        <thead>
                        <tr>
                            <th></th>
                            <th>Customer</th>
                            <th>Event</th>
                            <th>Event Date/Time</th>
                            <th>Package</th>
                            <th>Booking Type</th>
                            <th></th>
                        </tr>
                        </thead>
                    </table>
                    
                    
                </div>

                <div class="overlay">

                    <div id="spinn-loader"></div>

                </div>
               

            </div>

        </div>
    </div>
</section>

@*<div id="spinn-loader"></div>*@

