@using SBOSysTacV2.ViewModel
@model BookAddonSelectedViewModel



<div class="row">
    <h1 class="text-center">Modify Addons and Upgrades</h1>
</div>

@using (Html.BeginForm("UpdateSelectedAddonDetail", "Bookings", FormMethod.Post, new { @class = "form-horizontal", @id = "selectedaddonformmodify", role = "form" }))
{
    <div class="box-body">

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        
        @Html.HiddenFor(m=>m.SelectedBookAddonsDetail.addondetail_No)
        @Html.HiddenFor(m=>m.SelectedBookAddonsDetail.booking_No)
        @Html.HiddenFor(m => m.BookingAddonsDetail.addonId)
        @Html.HiddenFor(m => m.BookingAddonsDetail.bookaddonNo)

        <div class="row">
            <div class="col-sm-10">
                <div class="form-group">
                    <label class="control-label col-sm-3">Addon Details</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m => m.SelectedBookAddonsDetail.addon_details, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Unit:</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m => m.SelectedBookAddonsDetail.unit, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Amount per Unit</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m => m.SelectedBookAddonsDetail.amount,"{0:n2}", new { @class = "form-control text-right", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Order Qty:</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(m => m.SelectedBookAddonsDetail.orderQty, "{0:n2}", new { @class = "form-control text-right", @id = "addonselorderqty" })
                        @Html.ValidationMessageFor(m => m.SelectedBookAddonsDetail.orderQty, null, new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="box-footer" style="padding-left: 0px;">
        <div class="col-md-5 col-sm-offset-4">


            <button class="btn bg-olive btn-flat" type="submit" id="btn_updateselctedaddondetail"><i class="fa fa-check-square-o"></i> Update</button>
            <button class="btn bg-purple btn-flat" type="button" id="btn_cancelselectedaddondetail">Cancel</button>

        </div>
    </div>

}
