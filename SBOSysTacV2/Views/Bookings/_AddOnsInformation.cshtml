@using SBOSysTacV2.ViewModel
@model AddonsViewModel

<div class="panel-body">

    <div class="col-sm-7">

    @using (Html.BeginForm("SaveAddons", "Bookings", FormMethod.Post, new { @class = "form-horizontal", id = "save_addons" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        @Html.HiddenFor(m=>m.TransId);
        @Html.HiddenFor(m=>m.bookaddonNo)

        <div class="box box-primary">


            <div class="box-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.AddonsDescription, new {@class = "control-label required"})
                    @Html.TextBoxFor(m => m.AddonsDescription, new {@class = "form-control", placeholder = "Enter Description",@id="addonDescription"})
                    @Html.ValidationMessageFor(m=>m.AddonsDescription, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.AddonNote, new {@class = "control-label"})
                    @Html.TextAreaFor(m => m.AddonNote, new {@class = "form-control", placeholder = "Add Notes",rows = "3"})

                </div>

            @*<div class="form-group">
                @Html.LabelFor(m => m.AddonAmount, new {@class = "control-label"})
                @Html.TextBoxFor(m => m.AddonAmount, new {@class = "form-control text-right" , placeholder = "Enter Amount"})

            </div>*@

            </div>

            <div class="box-footer">
                <button class="btn bg-olive btn-flat" type="submit" id="btn_saveaddOns">Save</button>
                <button class="btn bg-purple btn-flat" type="button" id="btn_canceladdon">Cancel</button>
            </div>
        </div>
    }

    </div>

</div>
