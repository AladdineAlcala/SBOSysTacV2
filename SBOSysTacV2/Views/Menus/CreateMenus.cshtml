@using SBOSysTacV2.ViewModel
@model CourseMenuViewModel

@{
    ViewBag.Title = "CreateMenus";
}

<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">

            <h3 class="box-title">New Menu Details</h3>

        </div>

        @using (Html.BeginForm("CreateMenus", "Menus", FormMethod.Post,new {enctype = "multipart/form-data", @id="createMenu"}))
        {
            <div class="box-body">
                
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true)

                @Html.HiddenFor(m => m.menu_Id)
                @Html.HiddenFor(m => m.dateAdded)

                <div class="form-horizontal">

                    <div class="form-group">
                        @Html.LabelFor(model => model.menu_Id, new {@class = "col-lg-2 control-label text-left"})
                        <div class="col-lg-2">
                            @Html.TextBoxFor(m => m.menu_Id, new {@class = "form-control", disabled = "disabled"})
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.courseId, new {@class = "col-lg-2 control-label text-left required "})
                        <div class="col-lg-6">

                            @Html.DropDownListFor(m => m.courseId, Model.coursecategory_list, "------- Select Course -------", new {@class = "form-control", @id = "courseList"})

                        </div>
                        <div class="col-lg-3">
                            <div id="validationcourse"> @Html.ValidationMessageFor(model => model.courseId, null, new {@class = "text-danger"})</div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.menudesc, new {@class = "col-lg-2 control-label text-left required"})

                        <div class="col-lg-6">
                            @Html.TextAreaFor(m => m.menudesc, new {@class = "form-control", @cols = "80", @rows = "3", @style = "width:100%;"})
                        </div>

                        <div class="col-lg-3">
                            @Html.ValidationMessageFor(model => model.menudesc, null, new {@class = "text-danger"})
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.deptId, new {@class = "col-lg-2 control-label text-left required"})

                        <div class="col-lg-6">
                            @Html.DropDownListFor(m => m.deptId, Model.deptincharge_list, "------- Select Department -------", new {@class = "form-control", @id = "deptinchargelist"})
                        </div>

                        <div class="col-lg-3">
                            <div id="validationdept">@Html.ValidationMessageFor(model => model.deptId, null, new {@class = "text-danger"})</div>
                        </div>

                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.price, new {@class = "col-lg-2 control-label text-left required"})

                        <div class="col-lg-6">
                            @Html.TextBoxFor(m => m.price, new { @class = "form-control text-right", @placeholder = "0.00", @id = "menuPrice", @Value = "" })
                        </div>

                        <div class="col-lg-3">
                            <div id="validationdept">@Html.ValidationMessageFor(model => model.deptId, null, new {@class = "text-danger"})</div>
                        </div>

                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Note, new {@class = "col-lg-2 control-label text-left"})

                        <div class="col-lg-6">
                            @Html.TextAreaFor(m => m.Note, new {@class = "form-control", @cols = "80", @rows = "2", @style = "width:100%;"})
                        </div>


                    </div>
                    
                    <div class="form-group">
                       
                        <label class="col-lg-2 control-label text-left">Upload Image Files (.png | .jpg):</label>
                        <div class="col-lg-6">
                            <input type="file" name="UploadImage" id="UpImage"/>
                            <p class="help-block"></p>
                            @*@Html.TextBoxFor(m =>m.UploadImage,new {Type= "file" })*@
                        </div>


                    </div>

                </div>





            </div>

            <div class="box-footer" style="padding-left: 0px;">
                <div class="col-md-10 col-md-offset-2">


                    <button class="btn bg-olive btn-flat" type="submit" id="btn_savemenu">Register Menu</button>
                    <button class="btn bg-purple btn-flat" type="button" id="cancel" onclick="window.history.back()">Cancel</button>

                </div>
            </div>
        <!-- /.box-footer-->
        }
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

@section scripts
{

    <script type="text/javascript">


        var menuUrl = {
            menuurl_Index:"@Url.Action("Index", "Menus")"
           
        }
    </script>

    @Scripts.Render("~/Scripts/js_menu.js")
}
