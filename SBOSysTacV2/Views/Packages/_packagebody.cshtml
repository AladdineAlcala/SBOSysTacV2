@model SBOSysTacV2.ViewModel.PackageBodyViewModel

@Html.HiddenFor(x =>x.package_Id, new { @id = "hidden_packageId" })
<div class="row">
    <div class="col-sm-5 col-sm-offset-7 text-right">
        <div class="button-group">
            <a href="@Url.Action("Index","Packages")" class="btn btn-sm btn-primary">
                 Packages List
            </a>
            <a href="@Url.Action("PackageDetails","Packages",new{packageId=Model.package_Id})" class="btn btn-sm btn-primary">
                View Package Details
            </a>
        </div>
    </div>
</div>
<div class="row">
    <h3 class="box-title" style="margin-left: 10px;">@Model.package_name Package Details</h3>
    <div class="col-md-6">
      
        <div class="box box-primary">
            <div class="box-header with-border">
                <h4 class="box-title">Package Course Category Select </h4>

                @*<div class="box-tools">
                    <button id="add_course" class="btn btn-sm btn-default" data-id="@Model.package_Id"><i class="fa fa-search"></i></button>
                </div>*@

            </div>


            <div class="box-body table-responsive no-padding">
               
                @{
                    Html.RenderAction("DisplayPackageBodyCourses","Packages",new { packageId = Model.package_Id});

                }

            </div>

        </div><!--end box-->

    </div>
    
    <div class="col-md-6">
      
        <div class="box">
            <div class="box-header with-border" style="height: 500px;">
                @*<h4 class="box-title">Package Course Category Select </h4>*@

                @*<div class="box-tools">
                    <button id="add_course" class="btn btn-sm btn-default" data-id="@Model.package_Id"><i class="fa fa-search"></i></button>
                </div>*@
                
                <h4 class="card-title text-uppercase text-center text-bold text-green" style="margin-left: 5px; margin-top: 15px; margin-bottom: 5px; padding-top: 10px;">MENUS</h4>
                
                <div id="menulist">
                   
                    @{
                        Html.RenderAction("DisplaySelectedMenus","Packages",new { _packageId = Model.package_Id});

                    }

                </div>
                

            </div>


            

        </div><!--end box-->

    </div>

</div><!--end row-->

