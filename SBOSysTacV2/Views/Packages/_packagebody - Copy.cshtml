@using SBOSys.ViewModel
@model _PackageBodyViewModel
<div class="row">

    <div class="col-md-8">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@Model.packagename Details</h3>
            </div>

            <div class="box-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">No. of Main Course:</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.NoofMainCourse, new { @class = "form-control", type = "number" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Additional Course</label>
                        <div class="col-sm-8">

                            @Html.ListBoxFor(m => m.selectedMenuCategoryId, new SelectList(Model.Select2Models, "Id", "Text"), new { multiple = "multiple", @class = "form-control", @id = "menucategory" })


                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">Qty.Serve</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m=>m.qty_serve,new {@class="form-control",placeholder="Enter qty.",id= "qty_serve" })
                        </div>
                        <div class="col-sm-1">
                            <button class="btn bg-olive btn-flat" id="btn_Addcourse">Add</button>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-4">
                            <div class="box no-padding">
                                <table class="table table-condensed" id="tbl_addpackagebody">
                                    <tbody></tbody>
                                </table>
                                
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div><!--end box-->

    </div>

</div><!--end row-->
@section scripts{


    @Scripts.Render("~/Scripts/js_packages.js")


}

