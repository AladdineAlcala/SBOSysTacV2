@using SBOSysTacV2.ViewModel
@model PackageViewModel

<div class="row">
            
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">New Package Details</h3>
            </div>
            @using (Html.BeginForm("ProcessNewPackage", "Packages",FormMethod.Post,new {@id="new_packageForm"}))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true)

                @Html.HiddenFor(m=>m.p_id)

                <div class="box-body">
                    <div class="form-group">
                        <label class="control-label required">Package Type:</label>
                        <div class="radio" style="margin-top: 0;">
                            <label style="margin-right: 10px;">
                                @Html.RadioButtonFor(m => m.packagetype, "vip", new { @id = "vip_option", @class = "packagetype" })
                                Vip
                            </label>


                            <label style="margin-left: 10px; margin-right: 10px;">
                                @Html.RadioButtonFor(m => m.packagetype, "regular", new { @id = "reg_option", @class = "packagetype" })
                                Regular
                            </label>

                            <label style="margin-left: 10px; margin-right: 10px;">
                                @Html.RadioButtonFor(m => m.packagetype, "pm", new { @id = "pm_option", @class = "packagetype" })
                                PackMeals
                            </label>
                            <label style="margin-left: 10px; margin-right: 10px;">
                                @Html.RadioButtonFor(m => m.packagetype, "sd", new { @id = "sd_option", @class = "packagetype" })
                                Snacks and Drinks
                            </label>

                        </div>
                        @Html.ValidationMessageFor(m => m.packagetype, null, new {@class = "text-danger"})

                    </div>
                    <div class="form-group">
                        <label id="package_name" class="control-label">No. of Pax Applicable :</label>
                        @Html.DropDownListFor(m => m.packagenopax_id, Model.packageNoPax_listitem, "----- Select No. of Pax Applicable  -------", new {@class = "form-control", @id = "noofpaxApplic"})
                       
                        @Html.ValidationMessageFor(m => m.packagenopax_id, null, new {@class = "text-danger"})
                    </div>
                    

                    <div class="form-group">
                        <label id="package_name" class="control-label required">Package:</label>
                        @Html.TextBoxFor(m => m.p_descripton, new {@class = "form-control", placeholder = "Enter Package Name"})
                        @Html.ValidationMessageFor(m => m.p_descripton, null, new {@class = "text-danger"})
                    </div>
                    <div class="form-group">
                        <label id="amountperhead" class="control-label required">Amount per Pax:</label>
                        @Html.TextBoxFor(m => m.p_amountPax, new {@class = "form-control text-right", @placeholder = "0.00", @id = "packageAmount",@Value="" })
                        @Html.ValidationMessageFor(m => m.p_amountPax, null, new {@class = "text-danger"})
                    </div>

                    <div class="form-group col-md-6 col-sm-6" style="padding-left: 0px;">
                        <label id="mincountperhead" class="control-label required">Min. No.per Pax</label>
                        @Html.TextBoxFor(m => m.p_min, new {@class = "form-control", type = "number", @Value = "100",@id= "mincounthead"})
                        @Html.ValidationMessageFor(m => m.p_min, null, new {@class = "text-danger"})
                    </div>



                </div>
                <div class="box-footer">
                    <button class="btn bg-olive btn-flat" type="submit" id="btn_savePackages">Save Package</button>
                </div>

            }

        </div><!--end box-->

    </div>
            
</div><!--end row-->
