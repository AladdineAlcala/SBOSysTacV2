@using SBOSysTacV2.ViewModel
@model CustomerViewModel
    

@Html.HiddenFor(m=>m.customerId,new {@id="customerId"})

<section class="invoice">
    <div class="row" style="margin-bottom: 20px;">
        <div class="col-xs-6">
            <h2 class="page-header" style="margin-bottom: 15px; padding-bottom: 5px; border-bottom: 2px solid  #c8c8a6; color: #2f4f4f;">
                <i class="fa fa-address-card"></i> @Model.fullname
                  
            </h2>
        </div>
        
        <div class="col-sm-6">

            <div class="radio text-left mb-0 mt-4">

                <label class="mb-0 mx-2"><input type="radio" name="radfilter" checked="checked" id="rad_all"/>View All </label>
                <label class="mb-0 mx-2"><input type="radio" name="radfilter" id="rad_unpd"/>Unpaid</label>
                <label class="mb-0 mx-2"><input type="radio" name="radfilter" id="rad_pd"/>Paid</label>

            </div>

        </div>
    </div>
    
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <table class="table table-condensed table-hover" id="tbl-cusrecievables" style="width: 100%;">
                    <thead>
                    <tr>
                        <th>TRN #</th>
                        <th>EVENT DATE</th>
                        <th>EVENT</th>
                        <th>PACKAGE</th>
                        <th>AMOUNT DUE</th>
                        <th>PAYMENTS</th>
                        <th>UNPAID BALANCE</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tfoot style="background:#A9A9A9; font-size: 1.0em;">
                    <tr>
                        <th></th>
                        @*<td colspan='4' class="text-bold"> <span style="float: right;" id="totalPayment"></span> </td>*@
                        <th></th>
                        <th></th>
                        <th class="text-bold">TOTALS: </th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>

                    </tfoot>

                </table>
            </div>
        </div>
    </div>
</section>


